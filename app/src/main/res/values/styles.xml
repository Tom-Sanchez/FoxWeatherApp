<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/brown</item>
        <item name="tabIndicatorColor">@color/brown</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextBoldGreyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextBoldBlackStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallBoldTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>